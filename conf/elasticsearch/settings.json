{
  "analysis": {
    "analyzer": {
      "edgengram_analyzer": {
        "filter": ["lowercase"],
        "tokenizer": "edgengram_tokenizer"
      }
    },
    "tokenizer": {
      "edgengram_tokenizer": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 20,
        "token_chars": ["letter", "digit"]
      }
    },
    "normalizer": {
      "keyword_lowercase": {
        "type": "custom",
        "filter": ["lowercase"]
      }
    }
  },
  "number_of_shards": "1",
  "number_of_replicas": "0"
}
